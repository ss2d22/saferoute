{
  "$schema": "https://schema.railpack.com",
  "buildAptPackages": ["libpq-dev", "postgresql-client"],
  "deploy": {
    "aptPackages": ["libpq5", "postgresql-client"],
    "startCommand": "bash start.sh"
  },
  "steps": {
    "install": {
      "commands": [
        "...",
        "poetry run pip install --force-reinstall --no-cache-dir psycopg2-binary==2.9.11",
        {
          "cmd": "poetry run python -c 'import psycopg2; print(f\"psycopg2 version: {psycopg2.__version__}\")'",
          "customName": "Verify psycopg2 import"
        }
      ]
    }
  }
}
