# Database Configuration
DATABASE_URL=postgresql+psycopg2://saferoute:changeme@localhost:5432/saferoute
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=saferoute
POSTGRES_USER=saferoute
POSTGRES_PASSWORD=changeme

# JWT Authentication
JWT_SECRET_KEY=changeme-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# External APIs
ORS_API_KEY=your-openrouteservice-api-key-here
ORS_API_URL=https://api.openrouteservice.org
POLICE_API_BASE_URL=https://data.police.uk/api

# Redis (optional, for caching/background jobs)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1

# Application Settings
APP_ENV=development
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_AUTH_PER_MINUTE=5

# Safety Scoring Configuration
DEFAULT_LOOKBACK_MONTHS=12
DEFAULT_SAFETY_WEIGHT=0.8
DEFAULT_ROUTE_BUFFER_M=50
MAX_ROUTE_DISTANCE_KM=100

# Grid Configuration
GRID_CELL_SIZE_M=100
GRID_TYPE=hexagonal
SOUTHAMPTON_BBOX=50.85,-1.55,51.0,-1.3

# History Retention
DEFAULT_HISTORY_RETENTION_DAYS=90
MAX_HISTORY_RETENTION_DAYS=365
